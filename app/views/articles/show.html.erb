<h1> <%= @article.title %> <h1>
<p> <%= @article.content %> </p>

<div> <%= link_to "Back to list", articles_path %> </div>
<div> <%= link_to "Edit this article", edit_article_path %> </div>
<div> <%= link_to "Delete #{@article.title}",
            article_path(@article),
            method: :delete,
            data: { confirm: "Are you sure?" } %> </div>